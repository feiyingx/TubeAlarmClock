<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/white</item>
    </style>

	<style name="DayToggleButton">
	    <item name="android:background">@null</item>
	    <item name="android:textColor">@drawable/togglebtn_day_toggle</item>
	    <item name="android:layout_width">35sp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">3sp</item>
	    <item name="android:layout_marginRight">3sp</item>
	    <item name="android:paddingLeft">0sp</item>
	    <item name="android:paddingRight">0sp</item>
	    <item name="android:paddingTop">10sp</item>
	    <item name="android:paddingBottom">10sp</item>
	    <item name="android:textSize">18sp</item>
	</style>    
	
	<style name="AlarmListItemWeekday">
	    <item name="android:textSize">8sp</item>
	    <item name="android:paddingRight">2sp</item>
	</style>
	
	<style name="AlarmSwitchText" parent="@android:style/TextAppearance.Holo.Small">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textSize">12sp</item>
	</style>
</resources>
